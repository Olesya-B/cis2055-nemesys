
@model NemesysZ2.ViewModels.EditBlogPostViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<NemesysZ2.Models.ApplicationUser> UserManager
<h2>Edit Blog Post</h2>

<form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="form-control" />

    <div class="form-group">
        <label asp-for="Title" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="CategoryId"
                    asp-items="@(new SelectList(Model.CategoryList,"Id","Name"))">
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <img src="@Model.ImageUrl" class="col-md-2" />
    </div>
    <div class="form-group">
        <label asp-for="ImageToUpload" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="file" asp-for="ImageToUpload" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Location" class="form-control"></textarea>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DateSpotted" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="date" asp-for="DateSpotted" class="form-control">
            <span asp-validation-for="DateSpotted" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Update Blog Post" />
            <a asp-controller="BlogPost" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Post</a>
        </div>
    </div>

    
</form>
